<% if @tags_list.size > 0 %>
  <div class="<%= @div_class %>  <%= rotate(:odd_even) %>">
    <h4><%= @title %></h4>
		<% @tags_list.each do |tag| %>
			<ul>
				<li>
					<span class="name"><%= tag.name%></span>
					<span class="type"><%= format_types(tag.types, false)%></span>
					<span class="text"><%= tag.text%></span>
				</li>
			</ul>
		<% end %>
	</div>
<% end %>
